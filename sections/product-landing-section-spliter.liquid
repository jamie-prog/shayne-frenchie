{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .npl-section-spliter{
    display: inline-block; 
    width: 100%;
    height: 1.5px;
    background: {{section.settings.color}};
    opacity: 0.4;
  }
{%- endstyle -%}
<section data-section-type="NPL-section-spliter" data-section-id="{{section.id}}" class="section-{{section.id}}-padding">
  <div class="npl-container">
    <span class="npl-section-spliter npl-section-spliter-{{section.id}}"></span>
  </div>
</section>
{% schema %}
  {
    "name":"NPL section spliter",
    "settings":[
      {
        "type": "color",
        "id": "color",
        "label": "Color",
        "default": "#EB4D5C"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets":[
      {
        "name":"NPL section spliter"
      }
    ]
  }
{% endschema %}