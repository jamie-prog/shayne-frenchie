{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.npl-section-heading--{{section.id}} .npl-section-heading{
    color: {{section.settings.title_color}};
}
.npl-section-subtitle--{{section.id}}{
    color: {{section.settings.subtitle_color}};
}
{%- endstyle -%}
<link rel="stylesheet" href="{{'component-npl-global.css' | asset_url}}">
<section data-section-id="{{section.id}}" data-section-type="npl-section-heading" class="npl-section-heading--{{section.id}} section-{{section.id}}-padding">
    <div class="npl-container">
        {% if section.settings.subtitle != blank %}
            <p class="npl-section-subtitle npl-section-subtitle--{{section.id}} npl-section-subtitle--text-decoration-{{section.settings.subtitle_decoration}} npl-section-subtitle--align-{{section.settings.subtitle_align}}">{{section.settings.subtitle}}</p>
        {% endif %}
        <h3 class="npl-section-heading npl-heading--align-{{section.settings.heading_align}}">{{section.settings.title}}</h3>
    </div>
</section>

{% schema %}
    {
        "name":"NPL Section Heading",
        "settings":[
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle"
            },
            {
                "type": "color",
                "id": "subtitle_color",
                "label": "Subtitle Color",
                "default": "#E8ABAF"
            },
            {
                "type": "select",
                "id": "subtitle_decoration",
                "label": "Subtitle Text Decoration",
                "options": [
                    {
                        "value": "none",
                        "label": "None"
                    },
                    {
                        "value":"underline",
                        "label":"UnderLine"
                    }
                ],
                "default": "underline"
            },
            {
                "type": "select",
                "id": "subtitle_align",
                "label": "Align Subtitle",
                "options": [
                    {
                    "value": "left",
                    "label": "Left"
                    },
                    {
                        "value":"center",
                        "label":"Center"
                    },
                    {
                        "value":"right",
                        "label":"Right"
                    }
                ],
                "default": "left"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "color",
                "id": "title_color",
                "label": "Color",
                "default": "#EB4D5C"
            },
            {
                "type": "select",
                "id": "heading_align",
                "label": "Align Title",
                "options": [
                    {
                    "value": "left",
                    "label": "Left"
                    },
                    {
                        "value":"center",
                        "label":"Center"
                    },
                    {
                        "value":"right",
                        "label":"Right"
                    }
                ],
                "default": "left"
            },
            {
                "type": "header",
                "content": "t:sections.all.padding.section_padding_heading"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
            }
        ],
        "presets":[
            {
                "name":"NPL Section Heading"
            }
        ]
    }
{% endschema %}